<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textSectorElementHour"
        android:layout_width="wrap_content"
        android:layout_height="75dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dip"
        android:background="#ccc"
        android:gravity="center"
        android:padding="10dip"
        android:text="09:00 am"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
         />
    
    <RelativeLayout
        android:id="@+id/layout_sector_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textSectorElementHour"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textSectorElementHour" 
        android:background="#fff"
        >

     	    <TextView
     	        android:id="@+id/textSectorElementSummary"
     	        android:layout_width="wrap_content"
     	        android:layout_height="wrap_content"
     	        android:layout_alignParentBottom="true"
     	        android:layout_alignParentLeft="true"
     	        android:layout_alignParentRight="true"
     	        android:layout_alignParentTop="true"
     	        android:gravity="left|center_vertical"
     	        android:padding="10dip"
     	        android:text="Empty Slot"
     	        android:textAppearance="?android:attr/textAppearanceMedium"
     	        android:textColor="#000" />
        
    </RelativeLayout>


    
</RelativeLayout>		